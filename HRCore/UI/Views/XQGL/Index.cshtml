
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/CSS/table.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/javascript/bootstrap.js"></script>
</head>
<body>
    <div id="div1">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--用户管理 </font>
                </td>
            </tr>
            <tr>
                <td>
                    当前角色总数：<span id="zong">{{pages}}</span>例
                </td>
            </tr>
            <tr>
                <td align="right">
                       <a asp-action="user_add">添加用户</a>;
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="info">
                <td class="TD_STYLE1">
                    用户编号
                </td>
                <td class="TD_STYLE1">
                    用户名称
                </td>
                <td class="TD_STYLE1">
                    真实姓名
                </td>
                <td class="TD_STYLE1">
                    用户身份
                </td>
                <td class="TD_STYLE1">
                    操作
                </td>
            </tr>
            <tr v-for="(item,index) in da" class="animated bounceIn">
                <td class="TD_STYLE2">
                    {{item.U_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.U_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.U_true_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.JueSe_name}}
                </td>
                <td class="TD_STYLE2">

                    <img src="../../images/bt_edit.gif" title="编辑" style="cursor:pointer;" v-on:click="Up(item.U_id)" />
                    <img src="../../images/bt_del.gif" title="删除" style="cursor:pointer;" v-on:click="Del([item.U_id])" />
                </td>
            </tr>
        </table>
        <div id="pageDiv" style="text-align:center">
            <div id="leftPage">
            </div>
            <div id="rightPage">
                <input type="image" id="btnfirst" src="~/images/images/first.gif" v-on:click="first1" />&nbsp;&nbsp;
                <input type="image" id="btnback" src="~/images/images/back.gif" v-on:click="back1" />&nbsp;&nbsp;
                <input type="image" id="btnnext" src="~/images/images/next.gif" v-on:click="next1" />&nbsp;&nbsp;
                <input type="image" id="btnlast" src="~/images/images/last.gif" v-on:click="last1" />&nbsp;&nbsp;
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                da: [],
                pageIndex: 1,
                pages: 0,
                pageSize: 2,
                totalPage:0
            }, methods: {
                  load: function () {
                    var t = this;
                    $.ajax({
                        url: "/XQGL/check_list",
                        type: "post",
                        data: "id=" + t.pageIndex,
                        success: function (msg) {
                            var z = eval("(" + msg + ")");
                            t.da = z.li;
                            t.totalPage = z.Rows;
                            t.pages = z.Pages;

                        }

                    });

                },
                first1: function () {
                    var btn = this;
                    btn.pageIndex = 1;
                    btn.load();
                },
                back1: function () {
                    var btn = this;
                    if (btn.pageIndex > 1) {
                        btn.pageIndex--;
                    } else {
                        btn.pageIndex = 1;
                    }
                    btn.load();
                },
                next1: function () {
                    var btn = this;
                    if (btn.pageIndex < btn.totalPage) {
                        btn.pageIndex++;
                    } else {
                        btn.pageIndex = btn.totalPage;
                    }
                    btn.load();
                },
                last1: function () {
                    var btn = this;
                    btn.pageIndex = btn.totalPage;
                    btn.load();
                },
                Del: function (id) {
                    var t = this;
                    if (confirm("确认删除吗？")) {
                        $.ajax({
                            url: "/XQGL/Del",
                            type: "post",
                            data: "id=" + id,
                            success: function (msg) {
                                if (msg == "1") {
                                    t.load();
                                }
                            }
                        });
                    }
                },
                Up: function (id) {
                    window.location.href = "/XQGL/user_edit/" + id;
                }
            },
                mounted: function () {
                this.load();
            }
        });
    </script>
</body>
</html>
